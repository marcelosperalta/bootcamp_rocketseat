    <%- include('parts/page-header', { title: 'Add New Job'}) %> 

    <div class="container flex animate-up delay-2">
      <main>
        <form 
          id="form-job"
          method="POST"
          action="/job"
        >
          <fieldset>
            <legend>Job Information</legend>
            <div class="separator light"></div>

            <div class="input-wrapper">
              <label for="name">Job's name</label>
              <input type="text" id="name" name="name" />
            </div>

            <div class="input-group">
              <div class="input-wrapper">
                <label for="daily-hours">
                  How many hours per day will you do?
                </label>
                <input 
                  type="number"
                  step="0.1" 
                  id="daily-hours" 
                  name="daily-hours"/>
              </div>

              <div class="input-wrapper">
                <label for="total-hours">
                  What is the total hours for this job?
                </label>
                <input 
                  type="number"
                  id="total-hours" 
                  name="total-hours" />
              </div>
            </div>
          </fieldset>
    
        </form>
      </main>
      <aside class="card">
        <img src="/images/money-gray.svg" alt="Imagem de Dinheiro">
        <p>
          Fill the form to see the project's budget
        </p>
        <div class="button-group">
          <button 
            class="button green" 
            form="form-job" 
            type="submit" 
            title="Save">
              Save
          </button>
          <a 
            href="/"
            class="button gray"
            title="Cancel"
          >
            <img 
              src="/images/trash-24.svg" 
              alt="Cancel"
            >
          </a>
        </div>
      </aside>
      
    </div>
    <!-- end container -->
  </body>
</html>
 